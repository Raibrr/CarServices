<p style="color: green"><%= notice %></p>

<h1 class="text-xl font-bold mt-3">Informacion vehiculo:</h1>
<%= render @car %>

  <%= link_to "Edit this car", edit_car_path(@car), class: "mt-2 rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium" %>
  <%= link_to "Back cars", cars_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy car", @car, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium" %>
  </div>

<div>
  <h1 class="text-xl font-bold mt-3">Servicios:</h1>
  
  <div class="grid grid-cols-3 gap-2">
    <% @car_maintenance_services.each do |service| %>
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 my-3">
        <p class="font-bold text-gray-950">Description: <%= service.description %></p>
        <p class="font-bold text-gray-950">Status: <%= service.status %></p>
        <p class="font-bold text-gray-950">Discharge date: <%= service.date %></p>
      
      </div>
    <% end %>
    <button class="bg-green-400 text-white rounded-md mt-2 px-2">
        <%= link_to "Add Service", new_car_maintenance_car_service_path(@car) %>
    </button>
  </div>
  
</div>
